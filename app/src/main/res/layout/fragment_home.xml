<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_marginTop="0dp">

        <!-- Header Section with Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center"
            android:background="#520408">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Découvrez Des Offres, Explorez des Trésors – Votre Bazaarly Vous Attend!"
                android:textSize="24sp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <!-- Logo Image -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:contentDescription="Company Logo"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <!-- Category Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/art"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/art"
                android:background="@drawable/rounded_button"
                android:contentDescription="ART"/>

            <ImageButton
                android:id="@+id/decor"
                android:layout_width="48dp"
                android:layout_margin="7dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/decorative"
                android:background="@drawable/rounded_button"
                android:contentDescription="Hotels"/>

            <ImageButton
                android:id="@+id/music"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/music"
                android:background="@drawable/rounded_button"
                android:contentDescription="Education"/>
        </LinearLayout>

        <!-- Horizontal LinearLayout containing both sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_margin="5dp">

            <!-- Left Section: Featured Locations -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#6BF2E6D2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOUTES LES ANTIQUITÉS QUE VOUS SOUHAITEZ"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_margin="0dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="
Vous n'êtes pas à proximité ? Nous sommes près de chez vous !"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_margin="5dp"

                    android:layout_marginBottom="0dp"/>
            </LinearLayout>

            <!-- Right Section: Featured Item Example -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@android:drawable/dialog_holo_light_frame"

                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp">

                <ImageView

                    android:layout_width="90dp"
                    android:layout_height="155dp"
                    android:layout_margin="13dp"
                    android:src="@drawable/store"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="158dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="158dp"
                        android:text="Bazaarly"
                        android:textStyle="bold"
                        android:textSize="14.2sp"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Categories Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LE PRÉFÉRÉ DE PROPRIÉTAIRE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:background="@android:drawable/dialog_holo_light_frame"

            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/imgFeatured"
                android:layout_width="200dp"
                android:layout_height="155dp"
                android:layout_margin="13dp"
                android:src="@drawable/sofac"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="158dp"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtFeaturedTitle"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:text="Canapé ancien en cuir de mouton"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="2dp"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:text="Ce magnifique meuble ancien a été entièrement restauré et retapissé avec du cuir de mouton de premier choix."

                    android:textSize="12sp"/>


            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>